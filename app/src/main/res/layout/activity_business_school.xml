<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context=".ui.own.activities.BusinessSchoolActivity">
    <TextView
        android:id="@+id/tv_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/shape_bg"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rel"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_back"
            android:layout_margin="10dp"
            android:src="@drawable/ic_outline_back_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_title"
            android:text="商学院"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_integral_turn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="积分划转"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_marginRight="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/rel"
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="11dp"
        android:background="@drawable/shape_login_background"
        android:layout_height="396dp">

        <TextView
            android:id="@+id/tv_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字介绍文字"
            android:textColor="#5D5D5D"
            android:textSize="13sp"
            android:layout_marginHorizontal="23dp"
            android:layout_marginTop="23dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_cover"
            app:layout_constraintTop_toBottomOf="@id/tv_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="23dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_get_integral"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="获取积分"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:background="@mipmap/request_button_bg"
            android:layout_marginHorizontal="92dp"
            android:gravity="center"
            android:paddingVertical="9dp"
            android:layout_marginBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/img_line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="120dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/shape_black_round"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>