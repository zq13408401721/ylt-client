<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.news.activity.NewInformationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/shape_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/include"
            layout="@layout/fragment_nwe_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/include">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_be_tongzhi"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_xitongtongzhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="比特币会不会被其他货币取代？专家竟然这样解释！比特币为什么如此抢手？"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_date_tongzhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="来源：百度新闻    2020-09-09"
                    android:textColor="#bbbbbb"
                    android:textSize="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_xitongtongzhi" />

                <TextView
                    android:id="@+id/tv_tata1_tongzhi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:singleLine="false"
                    android:text="        文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字"
                    android:textColor="#979797"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_date_tongzhi" />

                <ImageView
                    android:id="@+id/iv_img1_tongzhi"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher_round"
                    app:layout_constraintTop_toBottomOf="@id/tv_tata1_tongzhi" />

                <TextView
                    android:id="@+id/tv_tata2_tongzhi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:singleLine="false"
                    android:text="        文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字"
                    android:textColor="#979797"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_img1_tongzhi" />

                <ImageView
                    android:id="@+id/iv_img2_tongzhi"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher_round"
                    app:layout_constraintTop_toBottomOf="@id/tv_tata2_tongzhi" />

                <TextView
                    android:id="@+id/tv_tata3_tongzhi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:singleLine="false"
                    android:text="        文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字"
                    android:textColor="#979797"
                    android:textSize="15dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_img2_tongzhi" />

                <ImageView
                    android:id="@+id/iv_img3_tongzhi"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher_round"
                    app:layout_constraintTop_toBottomOf="@id/tv_tata3_tongzhi" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>