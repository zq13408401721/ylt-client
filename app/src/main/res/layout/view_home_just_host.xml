<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/shape_register_ver_bg"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/view_home_pop_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="主机介绍"
        android:textColor="@color/colorBlack"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_home_pop_View"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorGray"
        app:layout_constraintTop_toBottomOf="@id/view_home_pop_TextView" />

    <TextView
        android:id="@+id/view_home_pop_Txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="      主机介绍主机介绍主机介绍主机介绍主机介绍主机介绍主机介绍主机介绍主机介绍主机介绍主机介绍主机介绍主机介绍主机介绍主机介绍主机介绍主机介绍主机介绍主机介绍主机介绍"
        app:layout_constraintTop_toBottomOf="@id/view_home_pop_View" />

    <ImageView
        android:id="@+id/view_pop_img_button"
        android:layout_width="134dp"
        android:layout_height="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_home_pop_Txt" />
</androidx.constraintlayout.widget.ConstraintLayout>